from random import randint

print "This is battleship (A board game). You will choose the X and Y coordinates and try to hit my ship. The board \
starts with 0. For example, (0, 0) (x, y) is the top left corner. You will have 10 tries. "
answer = raw_input("Yes or No?")
if answer == "No":
  exit()
elif answer == "Yes":
  board = []
  for x in range(1, 10):
    board.append(["O"] * 10)
  def print_board(board):
    for row in board:
      print " ".join(row)
  print_board(board)
  def random_row(board):
    return randint(1, len(board) - 0)
  def random_col(board):
    return randint(1, len(board[1]) - 0)
  ship_row = random_row(board)
  ship_col = random_col(board)
  for turn in range(10):
    print "Turn", turn + 1
    guess_col = int(raw_input("Guess X: "))
    guess_row = int(raw_input("Guess Y: "))
    if guess_row == ship_row and guess_col == ship_col:
      print "Congratulations! You sank my battleship!"
      break
    else:
      if guess_row not in range(10) or \
        guess_col not in range(10):
        print "Those coordinates are not even on the board..."
      elif board[guess_row][guess_col] == "X":
        print"You guessed that one already."
      else:
        print "You missed my battleship!"
        board[guess_row][guess_col] = "X"
      print_board(board)
      if turn == 10:
        print "Game Over"
        break
